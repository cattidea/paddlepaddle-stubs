    def reset(self, executor: Any, reset_program: Any | None = ...) -> None: ...
    def eval(self, executor: Any, eval_program: Any | None = ...) -> None: ...

class ChunkEvaluator(Evaluator):
    num_infer_chunks: Any = ...
    num_label_chunks: Any = ...
    num_correct_chunks: Any = ...
